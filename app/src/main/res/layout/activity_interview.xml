<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/dark_background_color"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="recruitapp.ittproject3.com.recruitmentapp.Interview">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:layout_below="@+id/interviewLinearLayout"
        android:gravity="center">

        <TextView android:id="@+id/currentQuestionNumber"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18dp"
            android:gravity="center" />

        <TextView android:id="@+id/currentQuestionView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="28dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView android:id="@+id/previewCounter"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/nextQuestionButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ready!"
            android:textColor="@color/white"
            android:background="@color/light_blue"
            android:textSize="20dp"
            android:layout_marginTop="40dp" />

    </LinearLayout>

</RelativeLayout>
