<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="recruitapp.ittproject3.com.recruitmentapp.profileScreen$PlaceholderFragment">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:padding="20dp"
            android:background="#CCCCCC"
            android:id="@+id/relativeLayout">

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/profileImage"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/blank_profile"
                android:padding="5dp"
                android:background="#FFF"
                android:layout_marginRight="10dp"
                android:onClick="profileImageClick"
                android:contentDescription="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textColor="#000"
                android:id="@+id/nameText"
                android:layout_above="@+id/locationText"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_toEndOf="@+id/profileImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="20sp"
                android:textColor="#000"
                android:drawableRight="@drawable/map_marker"
                android:id="@+id/locationText"
                android:layout_alignBottom="@+id/profileImage"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_toEndOf="@+id/profileImage" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editProfileButton"
                android:text=" edit profile"
                android:textColor="#000"
                android:textSize="12sp"
                android:drawableLeft="@drawable/pencil_icon"
                android:background="@drawable/buttonshape"
                android:layout_alignTop="@+id/profileImage"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:background="#6e8398"
            android:padding="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:padding="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uploadCVButton"
                android:text=" Upload CV"
                android:textColor="#000"
                android:textSize="20sp"
                android:drawableLeft="@drawable/upload_icon"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:padding="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beginIntroButton"
                android:text=" Add introduction video"
                android:textColor="#000"
                android:textSize="20sp"
                android:drawableLeft="@drawable/add_video_icon"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:padding="15dp" />

        </LinearLayout>

</RelativeLayout>
