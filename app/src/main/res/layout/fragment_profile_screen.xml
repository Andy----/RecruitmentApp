<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background_color"
    app:parallax_factor="1.9"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center"
            tools:ignore="HardcodedText"
            android:background="@drawable/profile_background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profileImage"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile_photo"/>

        </RelativeLayout>

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="@string/profile_name"
        android:id="@+id/profileTextHeader"
        android:background="@color/light_blue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/dark_background_color"
            android:padding="10dp"
            tools:ignore="HardcodedText"
            android:textColor="#ffffff">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textSize="@dimen/profile_below"
            android:textColor="@android:color/white"
            android:id="@+id/ageText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:text="29"
                android:textColor="#ffffff"
                android:inputType="number|numberDecimal"
                android:autoText="false"
                android:textSize="@dimen/profile_below" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/dark_background_color"
            android:padding="10dp"
            tools:ignore="HardcodedText"
            android:textColor="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:textSize="@dimen/profile_below"
                android:textColor="@android:color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dublin"
                android:textColor="#ffffff"
                android:inputType="number|numberDecimal"
                android:autoText="false"
                android:textSize="@dimen/profile_below" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/dark_background_color"
            android:padding="10dp"
            tools:ignore="HardcodedText"
            android:textColor="#ffffff">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewVideoButton"
                android:text=" View introduction video"
                android:textColor="#000"
                android:textSize="15sp"
                android:onClick="buttonOnClickView"
                android:drawableLeft="@drawable/add_video_icon"
                android:layout_gravity="center_horizontal"
                android:padding="15dp" />
        </LinearLayout>



    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>


