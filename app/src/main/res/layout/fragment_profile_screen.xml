<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background_color"
    app:parallax_factor="1.9"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center"
            tools:ignore="HardcodedText"
            android:background="@drawable/profile_background">

            <!--<ImageButton-->
            <!--android:layout_width="160dp"-->
            <!--android:layout_height="160dp"-->
            <!--android:id="@+id/profileImage"-->
            <!--android:src="@drawable/profiler"-->
            <!--android:gravity="center"-->
            <!--android:padding="5dp"-->
            <!--android:background="#FFF"-->
            <!--android:contentDescription="Profile Picture" />-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profileImage"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile_photo"/>
        </RelativeLayout>

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="@string/profile_name"
        android:id="@+id/profileTextHeader"
        android:background="@color/light_blue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:background="@color/dark_background_color"
            android:padding="10dp"
            tools:ignore="HardcodedText"
            android:textColor="#ffffff">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textSize="@dimen/profile_below"
            android:textColor="@android:color/white"
            android:id="@+id/nameText"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:textSize="@dimen/profile_below"
            android:textColor="@android:color/white"
            android:drawableRight="@drawable/map_marker"
            android:id="@+id/locationText" />

            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadCVButton"
            android:text=" Upload CV"
            android:textColor="#000"
            android:textSize="15sp"

            android:drawableLeft="@drawable/upload_icon"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"

            android:padding="15dp" />

            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beginIntroButton"
            android:text=" Add introduction video"
            android:textColor="#000"
            android:textSize="15sp"
            android:onClick="buttonOnClickRecord"
            android:drawableLeft="@drawable/add_video_icon"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:padding="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewVideoButton"
                android:text=" View introduction video"
                android:textColor="#000"
                android:textSize="15sp"
                android:onClick="buttonOnClickView"
                android:drawableLeft="@drawable/add_video_icon"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:padding="15dp" />

        </LinearLayout>
    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>

